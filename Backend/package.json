{
  "name": "twygobackend",
  "version": "1.0.0",
  "description": "Project Manking App with backend integration",
  "main": "server.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "nodemon src/server.ts",
    "build": "tsc",
    "test": "jest --verbose --coverage",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx,json,html,css,md}\"",
    "prepare": "husky install"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run test"
    }
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx,json,html,css,md}": [
      "prettier --write",
      "eslint"
    ]
  },
  "author": "Your Name",
  "dependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/validator": "^13.7.15",
    "@types/winston": "^2.4.4",
    "axios": "^1.2.2",
    "bcrypt": "^5.0.1",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.20.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.1",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "express-async-errors": "^3.1.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^6.0.8",
    "mongoose-unique-validator": "^2.0.3",
    "morgan": "^1.10.0",
    "passport": "^0.4.1",
    "passport-anonymous": "^1.0.0",
    "passport-jwt": "^4.0.0",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@types/babel__core": "^7.20.0",
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.13",
    "@types/dotenv": "^10.0.3",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.0.1",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/mongoose": "^6.0.10",
    "@types/morgan": "^1.9.3",
    "@types/passport": "^1.0.6",
    "@types/passport-jwt": "^3.0.4",
    "@typescript-eslint/eslint-plugin": "^4.30.0",
    "@typescript-eslint/parser": "^4.30.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "express-validator": "^6.14.2",
    "express-validators": "^1.0.4",
    "husky": "^7.0.2",
    "jest": "^27.2.1",
    "lint-staged": "^11.1.2",
    "nodemon": "^2.0.12",
    "prettier": "^2.4.1",
    "ts-jest": "^27.0.5",
    "ts-node": "^10.2.1",
    "typescript": "^4.4.3"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.ts"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/**/*.d.ts",
      "!src/config/**",
      "!src/server.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/<your-username>/<your-repo-name>.git"
  }
}
